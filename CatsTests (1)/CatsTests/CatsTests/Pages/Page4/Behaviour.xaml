<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CatsTests.Pages.Page4.Behaviour">
    <ScrollView>
        <StackLayout BackgroundColor="#8894B3">
            <Frame Padding="12" CornerRadius="0" BackgroundColor="#DFEDF3">
                <Label Text="Описание действий" HorizontalTextAlignment="Center" 
               FontAttributes="Bold" FontSize="20"/>
            </Frame>

            <Frame CornerRadius="25" Margin="15">
                <StackLayout>
                    <Label Text="{Binding BehaviorName}" TextColor="#326273" FontSize="20" FontAttributes="Bold"/>
                    <Label Text="{Binding BehaviorDescr}" />
                </StackLayout>
            </Frame>

            <Frame CornerRadius="25" Margin="15">
                <Image x:Name="picture" Source="{Binding BehaviorImage}" />
            </Frame>

            <Button x:Name="Back" Text="Назад" Clicked="Back_Clicked"/>
        </StackLayout>
    </ScrollView>
</ContentPage>