<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CatsTests.Pages.Page5.CooperationPage">
    <ScrollView>
        <StackLayout BackgroundColor="#8894B3">

            <Frame Padding="12" CornerRadius="0" BackgroundColor="#DFEDF3">
                <Label Text="Сотрудничество" HorizontalTextAlignment="Center" FontAttributes="Bold" FontSize="20"/>
            </Frame>

            <ListView x:Name="commerceList" ItemSelected="OnItemSelected">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <ViewCell.View>

                                <Frame CornerRadius="10" HasShadow="True" BackgroundColor="#EEEEEE" Margin="7,5,10,5">

                                    <!--НАЙТИ ПОЧЕМУ НЕТ CooperationName-->
                                    <Label Text="{Binding CooperationName}" FontSize="16" VerticalOptions="Center" />
                                    
                                </Frame>
                                
                            </ViewCell.View>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

        </StackLayout>
    </ScrollView>
</ContentPage>